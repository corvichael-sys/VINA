{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client"],
    "moduleResolution": "bundler", // Ensure bundler module resolution
    "allowImportingTsExtensions": true // Allow importing .ts and .tsx files with extensions
  },
  "include": ["src"]
}